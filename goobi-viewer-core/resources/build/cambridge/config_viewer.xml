<?xml version="1.0" encoding="ISO-8859-1" ?>
<config>

	<!-- local path configuration for lucene, mets files, persistence etc. -->
	<configFolder>/opt/digiverso/viewer/config/</configFolder>
	<indexedMetsFolder>/opt/digiverso/viewer/indexed_mets/</indexedMetsFolder>
	<xstreamFolder>/opt/digiverso/viewer/xstream/</xstreamFolder>
	<luceneFolder>/opt/digiverso/viewer/lucene/</luceneFolder>
	<stopwordFile>/opt/digiverso/viewer/stopwords.txt</stopwordFile>

	<!-- path to external URLs -->
	<urls>
		<!-- Addresses for download of metadata via oai -->
		<metadata>
			<mets>http://cambridge.intranda.com/viewer/oai?verb=GetRecord&amp;metadataPrefix=mets&amp;identifier=
			</mets>
			<marc>http://cambridge.intranda.com/viewer/oai?verb=GetRecord&amp;metadataPrefix=marcxml&amp;identifier=
			</marc>
			<dc>http://cambridge.intranda.com/viewer/oai?verb=GetRecord&amp;metadataPrefix=oai_dc&amp;identifier=
			</dc>
		</metadata>
		<contentServer>http://cambridge.intranda.com/viewer/</contentServer>
	</urls>

</config>
